{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "target": "es2015",
    "allowJs":false,
    "jsx": "react",
    "module": "commonjs",
    "experimentalDecorators": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noEmit": false,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "lib":[
      "es2015",
      "es2016",
      "dom",
      "es2017.object"
    ]
  },
  "compileOnSave":false,
  "exclude":[
    "node_modules/**/*.ts",
    "node_modules/**/*.js"
  ],
  "include":[
    "src/**/*.ts",
    "src/**/*.tsx",
    "css/**/*.ts"
  ]
}
